<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="no_gui_ctrl" default="false" />
  <arg if="$(arg no_gui_ctrl)" name="command_args" value="-d $(find xarm_planner)/launch/planner.rviz" />
  <arg unless="$(arg no_gui_ctrl)" name="command_args" value="-d $(find xarm6_moveit_config)/launch/moveit.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find xarm6_moveit_config)/config/kinematics.yaml"/>
  </node>

</launch>
